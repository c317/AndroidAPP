<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@drawable/boder01"  
    xmlns:android1="http://schemas.android.com/apk/res/android">
    <!--可将背景色换成：       android:background="@drawable/top1_bg" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">
        
        <TextView
            android1:id="@+id/topname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="组群通知"
            android:textColor="#666666"
            android:textSize="18sp" />
        
    </LinearLayout>
    

        
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        
         <Button
             android:id="@+id/back01"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/action_back"
            />

        </LinearLayout>
                 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android1:layout_marginRight="32dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"> 
        <Button
            android1:id="@+id/getnotice"
            android:layout_width="24dp"
       	    android:layout_height="24dp"
            android:background="@drawable/groupchat_notice_open_on"
            />

        </LinearLayout> 
        
        
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"> 
        <Button
            android1:id="@+id/getmembers"
            android:layout_width="24dp"
       	    android:layout_height="24dp"
            android:background="@drawable/groupchat_notice_members"
            />

        </LinearLayout>   

</RelativeLayout>
        
